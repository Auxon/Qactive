<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="12.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <NuSpecProjectUrl>https://github.com/RxDave/Qactive</NuSpecProjectUrl>
    <NuSpecReleaseNotes>https://github.com/RxDave/Qactive/releases</NuSpecReleaseNotes>
    <NuSpecIconUrl></NuSpecIconUrl>
    <NuSpecLicenseUrl>https://github.com/RxDave/Qactive/blob/master/LICENSE.txt</NuSpecLicenseUrl>
    <NuSpecTags>Rx, reactive, Reactive Extensions, Rx.NET, IObservable, IQbservable, queryable, service, stream</NuSpecTags>
  </PropertyGroup>

  <ItemGroup>
    <Flavors Include="Net45" />
  </ItemGroup>

  <Choose>
    <When Condition=" '$(MSBuildProjectName)' == 'Qactive' ">
      <ItemGroup>
        <NuGetFlavor Include="@(Flavors->'..\Qactive-%(Identity)\Qactive-%(Identity).csproj')" />
      </ItemGroup>
    </When>
    
    <When Condition=" '$(MSBuildProjectName)' == 'Qactive.Expressions' ">
      <ItemGroup>
        <NuGetFlavor Include="@(Flavors->'..\Qactive.Expressions-%(Identity)\Qactive.Expressions-%(Identity).csproj')" />
      </ItemGroup>
    </When>

    <When Condition=" '$(MSBuildProjectName)' == 'Qactive.Providers.Streaming' ">
      <ItemGroup>
        <NuGetFlavor Include="@(Flavors->'..\Qactive.Providers.Streaming-%(Identity)\Qactive.Providers.Streaming-%(Identity).csproj')" />
      </ItemGroup>
    </When>

    <When Condition=" '$(MSBuildProjectName)' == 'Qactive.Providers.Tcp' ">
      <ItemGroup>
        <NuGetFlavor Include="@(Flavors->'..\Qactive.Providers.Tcp-%(Identity)\Qactive.Providers.Tcp-%(Identity).csproj')" />
      </ItemGroup>
    </When>

  </Choose>

  <Target Name="_nop" />

</Project>